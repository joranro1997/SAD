<script>
class Cart {
    
    constructor(name, items) {
      this.name = name;
      this.items = items;
    }

    addItem(item){
    	var items = this.items;
        items.push(item);
        console.log(item+' added to the cart');
    }

    checkItem(item){
        var found = false;
        var items = this.items;
        items.forEach((x) => {if(x == item){
            found = true;
          };
        });
        if(found){
        	alert(item + ' has been found in the cart');
        }else{
        	alert(item + ' has not been found in the cart');
        };
    }

    removeItem(item){
    	var items = this.items;
        var index = -1;
        for (let i = 0; i<items.length; i++) {
            if(items[i] == item){
                index = items.indexOf(item);
            };
        }
        if(index !== -1){items.splice(index,1); alert(item +' removed from the cart');}
        else{alert(item + ' not found in cart');}
    }
  
    toString(){
      alert('This cart is called ' + this.name + ' and has the following items in it: ' + this.items);
    }
  
}

let cart = new Cart('cart1', ['pizza', 'beer'])

cart.addItem('melon');

cart.toString();

cart.checkItem('melon');

cart.removeItem('pizza');

cart.checkItem('melon');

cart.toString();
</script>
